.greeting
  .navbar-header.greeting__header
    .container
      button.navbar-toggle.collapsed.greeting__header-button(type='button', data-toggle='collapse',
      data-target='#menu')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      // /.greeting__header-button
      a.navbar-brand.greeting__header-logoLink(href='#')
        span.icon.greeting__header-logoLink-icon
      .collapse.navbar-collapse#menu
        ul.nav.navbar-nav.greeting__header-menu
          li.greeting__header-menuItem
            a.greeting__header-menuItem-link(href='#') О&nbsp;компании
          li.greeting__header-menuItem
            a.greeting__header-menuItem-link(href='#') Возможности
          li.greeting__header-menuItem
            a.greeting__header-menuItem-link(href='#') Корпоративным клиентам
        // /.greeting__header-menu
        .greeting__header-info.visible-lg
          i.fa.fa-phone(aria-hidden='true')
          p.greeting__header-infoNumber 8&nbsp;800&nbsp;900&nbsp;77&nbsp;77
          p.greeting__header-infoText 24/7. Бесплатно по РФ
        // /.greeting__header-info
        form.greeting__header-entrance.hidden-xs
          i.fa.fa-user-circle-o(aria-hidden='true')
          button.greeting__header-entranceButton(type='button')
            span Войти
            i.fa.fa-chevron-down(aria-hidden='true')
        // /.greeting__header-entrance
      // /.navbar-collapse
    // /.container
  // /.greeting__header
  .container(id='greeting')
    .greeting__presentation
      p.greeting__presentationText Берем всю организацию на себя
      h1.greeting__presentationHeading Командировка
    // /.greeting__presentation
    .greeting__form
      h5.greeting__formHeading
        | Поиск лучшего варианта
        span.hidden-xs вашей деловой
        |  поездки:
      include __header__searchForm
    // /.greeting__form
    .greeting__socials.visible-lg.visible-md
      a.wrapper(href='https://twitter.com/' title='https://twitter.com/' target='_blank')
        i.fa.fa-twitter(aria-hidden='true')
      a.wrapper(href='https://www.instagram.com/' title='https://www.instagram.com/' target='_blank')
        i.fa.fa-instagram(aria-hidden='true')
      a.wrapper(href='https://ru-ru.facebook.com/' title='https://ru-ru.facebook.com/' target='_blank')
        i.fa.fa-facebook(aria-hidden='true')
      a.wrapper(href='https://plus.google.com/' title='https://plus.google.com/' target='_blank')
        i.fa.fa-google-plus(aria-hidden='true')
    // /.greeting__socials
    include __header__services
  // /.container
// /.greeting